{% trans_default_domain 'FOSUserBundle' %}
<div class="register-form">
    <h2>Change your password</h2>
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

    <div class="group-input">{{ form_row(form.current_password) }}</div>
    <div class="group-input">{{ form_row(form.plainPassword) }}</div>

    <div>
        <input type="submit" class="site-btn register-btn" value="{{ 'change_password.submit'|trans }}" />
    </div>
</div>
{{ form_end(form) }}
