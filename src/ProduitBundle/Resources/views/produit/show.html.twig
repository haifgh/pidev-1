{% extends 'adminBase.html.twig' %}
{% block content %}
<div class="container-fluid mt--7">

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="container">

                <div class="row clearfix">
                    <h1>Products list</h1>
                </div>
                <div class="body table-responsive">
                    <table class="table">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ produit.qte }}</td>
            </tr>
            <tr>

                <th>Price</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
            <th>Picture</th>
                <td><img alt="" src="{{ asset('images/') }}{{ produit.photo}}" style="width:100px;height: 100px" ></td>
            </tr>
        </tbody>
    </table>

<center>
            <a href="{{ path('produit_index') }}" class="btn btn-primary mb-5">Back to the list</a>

            <a href="{{ path('produit_edit', { 'id': produit.id }) }}" class="btn btn-primary mb-5">Edit</a>

            <a href="{{ path('produit_delete', { 'id': produit.id })}}" class="btn btn-primary mb-5">delete</a>
</center>
        </div>
    </div>
        </div></div></div></div>
{% endblock %}
