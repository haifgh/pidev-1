{% extends 'adminBase.html.twig' %}

{% block content %}
    <div class="container-fluid mt--7">
<div class="row clearfix">
<div class="col">
    <div class="card p-4">
    <div class="card-header">
    <h1>Categorie</h1>
    </div>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>

<td><center>
            <a class="btn btn-outline-dark" href="{{ path('categorie_index') }}">Back to the list</a>

            <a class="btn btn-outline-dark" href="{{ path('categorie_edit', { 'id': categorie.id }) }}">Edit</a>

            <a class="btn btn-outline-dark" href="{{ path('categorie_delete', { 'id': categorie.id }) }}">delete</a></center></td>
    </table>
    </div>
</div>
</div></div>
        <div class="row clearfix mt-5">
            <div class="col">
                <div class="card shadow p-3">
                    <div class="card-header">
                        <h1>Produits list</h1>

                    </div>
                    <div class="body table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Qte</th>
                                <th>Prix</th>
                                <th>Description</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for produit in categorie.produits %}
                            <tr>
                                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.qte }}</td>
                                <td>{{ produit.prix }}</td>
                                <td>{{ produit.description }}</td>

                            </tr>
                            </tbody>
                            {% endfor %}
                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
