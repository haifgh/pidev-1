{% extends 'base.html.twig' %}

{% block content %}

    <!-- Breadcrumb Section Begin -->

    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="#"><i class="fa fa-home"></i> Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section Begin -->

    <!-- Product Shop Section Begin -->
    <section class="product-shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                    <div class="filter-widget">
                        <h4 class="fw-title">Categories</h4>
                        <ul class="filter-catagories">
                            {% for categorie in c %}
                            <li><a href="{{ path('shop_cat',{"id": categorie.id}) }}">{{ categorie.nom }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                    <div class="col-lg-9 order-1 order-lg-2">
                        <div class="product-show-option">
                            <div class="row">
                                <div class="col-lg-7 col-md-7">
                                    <div class="select-option">


                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-5 text-right">
                                    <p>{{ p|length }} Products</p>
                                </div>
                            </div>
                        </div>
                        <div class="product-list">
                            <div class="row">

                                {% for product in p %}
                                <div class="col-lg-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="pi-pic">
                                            <img src="{{ asset(product.photo) }}" style="width:4cm;height:5cm;" >

                                                {% set test=null %}
                                                {% for lp in product.lignesPromotion  %}
                                                    {% set test=lp %}
                                                {% endfor %}
                                                {% if test is not null %}
                                            <div class="sale pp-sale">Sale</div>

                                            {% endif %}
                                            <ul>
                                                <li class="w-icon active w-100 "><a href="{{ path('panier_add',{'id': product.id} )}}" class="add "><i class="icon_bag_alt"></i></a></li>

                                            </ul>
                                        </div>
                                        <div class="pi-text">
                                            <div class="catagory-name">{{ product.categorie.nom }}</div>
                                            <a href="#">
                                                <h5>{{ product.nom }}</h5>
                                            </a>
                                            {% if test is not null  %}
                                                <div class="product-price">
                                                    {{ product.prixPromo }} T.N.D
                                                    <span>{{ product.prix }} T.N.D</span> {#prix promo#}
                                                </div>
                                                {% else %}
                                            <div class="product-price">
                                                {{ product.prix }} T.N.D
                                                <span></span> {#prix promo#}
                                            </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>

                                {% endfor %}
                                <br>

                            </div>
                            <div class="row-cols-1">
                                <div class="col-4">
                                    {{ knp_pagination_render(p) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <!-- Product Shop Section End -->

{% endblock %}

{% block customscript %}
    <script>
        $('.add').click(function (e) {
            e.preventDefault();
            $.ajax({url: $(this).attr('href'), success: function(){

                    $('#refresh').load(document.URL +  ' #refresh ul');
                }});


        });

    </script>
{% endblock %}

