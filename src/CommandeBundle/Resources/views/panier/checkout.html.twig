{% extends 'base.html.twig' %}

{% block content %}

    {% if panier is empty %}
<section class="checkout-section spad">
    <div class="container">

            <div class="row">
                <div class="col"></div>
                    <h1>Your cart is empty!</h1>
                <div class="col"></div>
            </div>
            <div class="row mt-3">
                <div class="col"></div>
                <a href="{{ path('shop') }}" class="primary-btn checkout-btn">shop now</a>
                <div class="col"></div>
            </div>

    </div>
</section>
    {% else %}
        <section class="checkout-section spad">
            <div class="container">
                <form action="{{ path('payer') }}" class="checkout-form">
                    <div class="row">
                        <div class="col-lg-6">

                            <h4>Billing Details</h4>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label for="fir">First Name<span>*</span></label>
                                    <input type="text" id="fir" value="{{ app.user.nom }}">
                                </div>
                                <div class="col-lg-6">
                                    <label for="last">Last Name<span>*</span></label>
                                    <input type="text" id="last" value="{{ app.user.prenom}}">
                                </div>


                                <div class="col-lg-12">
                                    <label for="street">Address<span>*</span></label>
                                    <input type="text"  name="adresse" class="street-first" value="{{ app.user.adresse}}">

                                </div>

                                <div class="col-lg-6">
                                    <label for="email">Email Address<span>*</span></label>
                                    <input type="text" id="email" value="{{ app.user.email }}">
                                </div>
                                <div class="col-lg-6">
                                    <label for="phone">Phone<span>*</span></label>
                                    <input type="text" id="phone" value="{{ app.user.tel }}">
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-6">

                            <div class="place-order">
                                <h4>Your Order</h4>
                                <div class="order-total">
                                    <ul class="order-table">
                                        <li>Product <span>Total</span></li>
                                        {% set total = 0 %}
                                        {% for item in panier %}
                                            {% set total = total+item.product.prix*item.quantity %}
                                        <li class="fw-normal">{{ item.product.nom}} x {{ item.quantity }} <span>{{ item.product.prix*item.quantity }} T.N.D</span></li>
                                        {% endfor %}
                                        <li class="total-price">Total <span>{{ total }} T.N.D</span></li>
                                    </ul>

                                    <div class="order-btn">
                                        <button type="submit" class="site-btn place-btn">Place Order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    {% endif %}
{% endblock %}

