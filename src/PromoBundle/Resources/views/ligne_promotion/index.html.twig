{% extends 'adminBase.html.twig' %} {# this #}

{% block content %}
<div class="container-fluid mt--7"> {# this #}
    <div class="row"> {# this #}
        <div class="col"> {# this #}
            <div class="card shadow">
                <div class="card-header border-0">
                    <h3 class="mb-0">Ligne_promotion</h3>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Promo</th>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Actions</th>

                        </tr>
                        </thead>
                        <tbody>
        {% for ligne_promotion in ligne_promotions %}
            <tr>
                <td><a href="{{ path('ligne_promotion_show', { 'id': ligne_promotion.id }) }}">{{ ligne_promotion.id }}</a></td>
                <td>{{  ligne_promotion.promotion.nom }}</td>
                <td>{{ ligne_promotion.produit.nom}}</td>
                <td>{{ ligne_promotion.quantite }}</td>
                <td><button><a href="{{ path('ligne_promotion_delete', { 'id': ligne_promotion.id }) }}">delete</a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
