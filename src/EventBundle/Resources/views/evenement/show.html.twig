{% extends 'base.html.twig' %}

{% block content %}
    <h1>Evenement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if evenement.dateDebut %}{{ evenement.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if evenement.dateFin %}{{ evenement.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Validite</th>
                <td>{{ evenement.validite }}</td>
            </tr>
            <tr>
                <th>Nbreplaces</th>
                <td>{{ evenement.nbrePlaces }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{asset('images/')}}{{ evenement.photo }}" alt="" style="width: 20%;height: 20%"></td>
            </tr>

        </tbody>
    </table>
<ul>
    {% for e in evenement.listesParticipants %}
        <li>{{ e.user.username }}</li>
    {% endfor %}
</ul>
    <ul>
        <li>
            <a href="{{ path('evenement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('evenement_edit', { 'id': evenement.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('evenement_delete', { 'id': evenement.id }) }}">delete</a>
        </li>
    </ul>
{% endblock %}
