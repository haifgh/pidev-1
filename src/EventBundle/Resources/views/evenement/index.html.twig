{% extends 'adminBase.html.twig' %}

{% block content %}

<div class="container-fluid mt--7">
    <div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Events</h3>
                <div class="col-11 text-right">
                    <button class="btn btn-sm btn-primary">
                       <a style="color: white" href="{{ path('evenement_new') }}">Create Event  </a>
                   </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date_debut</th>
                        <th scope="col">Date_fin</th>
                        <th scope="col">Nbr_Places</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    {% for evenement in evenements %}
                        <tr>
                            <td><a href="{{ path('evenement_show', { 'id': evenement.id }) }}">{{ evenement.id }}</a></td>
                            <td>{{ evenement.nom }}</td>
                            <td>{% if evenement.dateDebut  %}{{ evenement.dateDebut|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if evenement.dateFin   %}{{ evenement.dateFin|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ evenement.nbrePlaces }}</td>

                            <td>
                                <div>
                                 <button class="btn btn-sm btn-primary">
                                        <a style="color: white" href="{{ path('evenement_show', { 'id': evenement.id }) }}">show</a>
                                    </button>
                                    <button class="btn btn-sm btn-primary">
                                        <a style="color: white" href="{{ path('evenement_edit', { 'id': evenement.id }) }}">edit</a>
                                    </button>
                                </div></br>
                                <div>
                                  <button class="btn btn-sm btn-primary">
                                    <a style="color: white" href="{{ path('evenement_delete', { 'id': evenement.id }) }}">delete</a>
                                  </button>

                                </div>

                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>
{% endblock %}
