{% extends 'adminBase.html.twig.' %}

{% block content %}
    <div class="conainer-fluid mt--7">


    <div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
    <div class="header">
        <h1>Commentaires list</h1>
    </div>
    <div class="body table-responsive">
    <table class="table">
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>username</th>
                <th>Actions</th>
            </tr>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td><a href="{{ path('commentaire_show', { 'id': commentaire.id }) }}">{{ commentaire.id }}</a></td>
                <td>{{  commentaire.contenu  }}</td>
                <td>{% if  commentaire.date %}{{  commentaire.date|date('Y-m-d') }}{% endif %}</td>
                <td> {{commentaire.user}}</td>
               <td>

                            <a class="btn btn-outline-success " href="{{ path('commentaire_delete', { 'id': commentaire.id }) }}">delete comment</a>



                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>

{% endblock %}