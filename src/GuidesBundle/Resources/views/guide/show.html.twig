
{% extends 'adminBase.html.twig' %}

{% block content %}
<div class="container-fluid mt--7">
    <div class="row">
        <div class="col"></div>
        <div class="card col-6 p-4">
    <h1>Guide</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guide.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ guide.titre }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if guide.dateCreation %}{{ guide.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ guide.categorie }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ guide.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
            <td><img alt="" src="{{ asset('images/') }}{{ guide.photo}}" style="width: 50px;height: 50px"></td></tr>
            <tr>
                <th>Lien</th>
                <td>{{ guide.lien }}</td>
            </tr>
        </tbody>
    </table>

<div class="mt-5"></div>
<center>
            <a class="btn btn-danger" href="{{ path('guide_index') }}">Back to the list</a>

            <a class="btn btn-success" href="{{ path('guide_edit', { 'id': guide.id }) }}">Edit</a>
</center>

  </div><div class="col"></div></div></div>
{% endblock %}
