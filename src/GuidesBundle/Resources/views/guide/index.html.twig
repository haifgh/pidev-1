{% extends 'adminBase.html.twig' %}

{% block content %}
    <div class="container-fluid mt--7">

    <div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h1>Guides list</h1>
            </div>
            <div class="body table-responsive">
                <table class="table">

        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Datecreation</th>
                <th>Categorie</th>
                <th>Description</th>
                <th>Note</th>
                <th>Photo</th>
                <th>Lien</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guide in guides %}
            <tr>
                <td><a href="{{ path('guide_show', { 'id': guide.id }) }}">{{ guide.id }}</a></td>
                <td>{{ guide.titre }}</td>
                <td>{% if guide.dateCreation %}{{ guide.dateCreation|date('Y-m-d') }}{% endif %}</td>
                <td>{{ guide.categorie }}</td>
                <td>{{ guide.description }}</td>
                <td>{{ guide.Note }}</td>
                <td><img alt="" src="{{ asset('images/') }}{{ guide.photo}}" style="width: 50px;height: 50px"></td>
                <td>{{ guide.lien }}</td>
                <td>
                            <a href="{{ path('guide_show', { 'id': guide.id }) }}" class="btn btn-sm btn-primary ">show guide</a>
                            <a href="{{ path('guide_edit', { 'id': guide.id }) }}" class="btn btn-sm btn-primary ">edit guide</a><br><br>
                    <a href="{{ path('guide_delete', { 'id': guide.id }) }}" class="btn btn-sm btn-primary ">delete guide</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                {{ knp_pagination_render(guides) }}

    </div>
    </div>
    </div>
    </div>
<center>            <a class="btn btn-dark" href="{{ path('guide_new') }}" class="btn btn-primary btn-lg">Create a new guide</a>
</center>


    </div>
{% endblock %}
